<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LayoutBasic" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- For radio buttons -->
<!--        <item name="radioButtonStyle">@style/Widget.TipTime.CompoundButton.RadioButton</item>-->
<!--        &lt;!&ndash; For switches &ndash;&gt;-->
<!--        <item name="switchStyle">@style/Widget.TipTime.CompoundButton.Switch</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.LayoutBasic.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">#F44336</item>
    </style>

    <style name="Widget.LayoutBasic.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textColor">#F44336</item>
    </style>

<!--    <style name="MyCardView" parent="CardView">-->
    <style name="Widget.LayoutBasic.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <!--        <item name="cardCornerRadius">@dimen/hei_standard_8dp</item>-->
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">@color/black</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="Widget.LayoutBasic.Appbar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">10dp</item>
        <item name="backgroundColor">@color/black</item>
    </style>

</resources>